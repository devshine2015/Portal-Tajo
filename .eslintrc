{
  "parser": "babel-eslint",
  "extends": "airbnb",
  "env": {
    "browser": true,
    "node": true
  },
  rules: {
    "react/prefer-es6-class": 1,
    "no-use-before-define": 0,
    "no-confusing-arrow": 0,
    "strict": 0 // controls location of Use Strict Directives. 0: required by `babel-eslint`
  },
  "plugins": [
    "react"
  ],
  "ecmaFeatures": {
    "jsx": true,
    "modules": true
  },
  "globals": {
    "__DEV__": true
  }
}